@model freak_store.Models.Product
@{
    ViewData["Title"] = "Detalle de Producto";
}

<div class="container mt-4">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-6">
            <img src="@Model.Img" class="img-fluid" alt="@Model.Name">
        </div>

        <!-- Información del producto -->
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <h4 class="text-muted">S/. @Model.Price</h4>
            
            <p>
                @if (Model.Inventory.Quantity > 0)
                {
                    <span class="badge bg-success">Disponible</span>
                }
                else
                {
                    <span class="badge bg-danger">Agotado</span>
                }
            </p>
            <p>Cantidad disponible: @Model.Inventory.Quantity</p>
            
            <hr>
            
            <h5>Descripción</h5>
            <p>@Model.Description</p>
            
            <!-- Botón para añadir al carrito -->
            <a href="/Cart/AddToCart/@Model.Id" class="btn btn-primary">Añadir al carrito</a>
        </div>
    </div>
</div>
