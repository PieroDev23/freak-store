<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Freak Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="icon" href="https://i.imgur.com/a6arYkc.png" type="image/x-icon" />
</head>
<body style="min-height: 100vh; display: flex; flex-direction: column;">
    <header>
        <!-- Navbar principal -->
        <nav class="navbar navbar-expand-lg" style="background-color: #1d284c; padding: 0.5rem 1rem;">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                    <img src="https://i.imgur.com/a6arYkc.png" alt="Freak Store Logo" width="40" class="me-2">
                    <span style="font-weight: bold; color: white;">FREAK STORE</span>
                </a>

                <!-- Barra de búsqueda -->
                <form class="d-flex mx-auto" action="/Catalog/FindProduct" method="get" style="flex: 1; max-width: 500px;">
                    <input class="form-control" name="query" type="search" placeholder="Buscar ..." aria-label="Search" style="border-radius: 20px 0 0 20px;">
                    <button class="btn btn-outline-light" type="submit" style="border-radius: 0 20px 20px 0;">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <!-- Íconos de carrito y sesión -->
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="@Url.Action("Index", "ShoppingCart")">
                            <i class="bi bi-cart"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span style="color: white;">Hola, @(User.Identity.Name ?? "Usuario")</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link" style="color: white;">Cerrar sesión</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link text-white" href="@Url.Action("Login", "Account")"><i class="bi bi-person"></i> Conectar</a>
                        }
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Segunda barra de navegación -->
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #f8f9fa;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Catalog" style="color: black;">CATÁLOGO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact" style="color: black;">CONTACTO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/CheapShark" style="color: black;">CHEAP SHARK</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/GameNews" style="color: black;">NOTICIAS</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main role="main" class="container mt-4" style="flex-grow: 1;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer py-3" style="background-color: #1d284c;">
        <div class="container">
            <p class="text-center mb-0 text-white">© 2024 Freak Store</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("Scripts", required: false)
</body>
</html>
