<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Freak Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet"> <!-- Enlace al archivo CSS personalizado -->
    <link rel="icon" href="https://i.imgur.com/a6arYkc.png" type="image/x-icon" />
</head>
<body style="min-height: 100dvh; display: flex; flex-direction: column;">
    <header>
        <!-- Navbar principal -->
        <nav class="navbar navbar-expand-lg" style="background-color: #1d284c; padding: 10px 20px;">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="https://i.imgur.com/a6arYkc.png" alt="Freak Store Logo" width="40">
                    <span class="ms-2 text-white" style="font-weight: bold; font-size: 1.25rem;">FREAK STORE</span>
                </a>

                <!-- Barra de búsqueda centralizada -->
                <form class="d-flex mx-auto" style="width: 50%;">
                    <input class="form-control" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn" type="submit">
                        <i class="bi bi-search text-white"></i>
                    </button>
                </form>

                <!-- Carrito y Conectar -->
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item me-3">
                        <a class="nav-link text-white d-flex align-items-center" href="#">
                            <i class="bi bi-cart-fill" style="font-size: 1.25rem;"></i>
                            <span class="ms-1">0</span> <!-- Aquí podrías insertar la cantidad de productos en el carrito -->
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" href="@Url.Action("Index", "Acceso")">
                            <i class="bi bi-person" style="font-size: 1.25rem;"></i>
                            <span class="ms-1">Conectar</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main content with flex-grow to push footer to bottom -->
    <main role="main" class="container mt-4" style="flex-grow: 1;">
        @RenderBody() <!-- Aquí se carga el contenido dinámico de cada página -->
    </main>

    <footer class="footer py-3" style="background-color: #1d284c;">
        <div class="container">
            <p class="text-center mb-0 text-white">© 2024 Freak Store</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
