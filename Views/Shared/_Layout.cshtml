<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Freak Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet"> <!-- Enlace al archivo CSS personalizado -->
    <link rel="icon" href="https://i.imgur.com/a6arYkc.png" type="image/x-icon" />
</head>
<body style="min-height: 100dvh; display: flex; flex-direction: column;">
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg" style="background-color: #1d284c;">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" href="/">
                    <img src="https://i.imgur.com/a6arYkc.png" alt="Freak Store Logo" width="50">
                    FREAK STORE
                </a>

                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" placeholder="Buscar ..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Buscar</button>
                </form>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="tel:970386792">970386792</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Acceso")">
                            <i class="bi bi-person"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#"><i class="bi bi-cart"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Navigation Menu (categorías) -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">PROMOFAST</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!-- Opciones de menú sin TECLADOS y MOUSE -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Catalog">CATÁLOGO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">CONTACTO</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content with flex-grow to push footer to bottom -->
    <main role="main" class="container mt-4" style="flex-grow: 1;">
        @RenderBody() <!-- Aquí se carga el contenido dinámico de cada página -->
    </main>

    <footer class="footer py-3" style="background-color: #1d284c;">
        <div class="container">
            <p class="text-center mb-0 text-white">© 2024 Freak Store</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
