@model freak_store.ViewModels.ShoppingCartViewModel

<div class="container mt-5">
    <h2 class="mb-4">Carrito de Compras</h2>

    <div class="row">
        <div class="col-lg-8">
            <div class="list-group">
                @foreach (var item in Model.Items)
                {
                    <div class="list-group-item d-flex align-items-center mb-3">
                        <img src="@item.ImageUrl" alt="@item.Name" width="100" class="me-3" />
                        <div class="flex-grow-1">
                            <h5 class="mb-1">@item.Name</h5>
                            <p class="text-muted">@item.Description</p>
                            <span class="text-danger fw-bold">US $@item.Price</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <input type="number" value="@item.Quantity" min="1" class="form-control" style="width: 70px;" />
                            <button class="btn btn-danger ms-2"><i class="bi bi-trash"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Resumen</h5>
                    <p class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <span>US $@Model.Subtotal</span>
                    </p>
                    <p class="d-flex justify-content-between">
                        <span>Gastos de env√≠o</span>
                        <span>US $@Model.ShippingCost</span>
                    </p>
                    <p class="d-flex justify-content-between text-success">
                        <span>Descuento</span>
                        <span>- US $@Model.Discount</span>
                    </p>
                    <hr />
                    <h4 class="d-flex justify-content-between">
                        <span>Total estimado</span>
                        <span>US $@Model.Total</span>
                    </h4>
                    <button class="btn btn-primary w-100 mt-3">Pagar</button>
                </div>
            </div>
        </div>
    </div>
</div>
