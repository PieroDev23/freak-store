@model freak_store.Models.ShoppingCart

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>S/ @item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>S/ @(item.Product.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: S/ @Model.Items.Sum(i => i.Product.Price * i.Quantity)</h3>

<hr />

<form asp-action="ProcessPayment" method="post">
    <h4>Información de Pago</h4>

    <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" id="name" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label for="cardNumber">Número de Tarjeta</label>
        <input type="text" id="cardNumber" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="expirationDate">Fecha de Expiración</label>
        <input type="month" id="expirationDate" name="expirationDate" class="form-control" required>
        
    </div>


    <div class="form-group">
        <label for="cvv">CVV</label>
        <input type="text" id="cvv" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Realizar Pago</button>
</form>
