@model List<Dictionary<string, object>>

<h2 class="text-center mb-4">Juegos más baratos - colaboración con CheapShark!</h2>

@if (Model.Any())
{
    <div class="container mt-4">
        <div class="row">
            @foreach (var featuredProduct in Model)
            {
                <div class="col-12 col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@featuredProduct["thumb"]" class="card-img-top" alt="@featuredProduct["title"]"
                             style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title">@featuredProduct["title"]</h6>
                            <p class="card-text">Precio: $@featuredProduct["salePrice"]</p>
                            <p class="card-text"><small class="text-muted">Precio normal: $@featuredProduct["normalPrice"]</small></p>
                        </div>
                        <div class="card-footer">
                            <a href="https://www.cheapshark.com/redirect?dealID=@featuredProduct["dealID"]" target="_blank" class="btn btn-primary w-100">
                                Ver oferta
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p class="text-center">No se encontraron ofertas en este momento.</p>
}
