@model Contact

@{
    ViewData["Title"] = "Formulario de Contacto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Formulario de Contacto</h2>
                </div>
                <div class="card-body">

                    <!-- Mensajes de éxito o error -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Formulario de contacto -->
                    <form asp-action="SubmitContactForm" asp-controller="Contact" method="post">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="Ingresa tu nombre" required
                                pattern=".{1,}" title="Por favor ingresa tu nombre.">
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico"
                                required type="email" title="Por favor ingresa un correo electrónico válido.">
                        </div>

                        <div class="mb-3">
                            <label for="Subject" class="form-label">Asunto</label>
                            <select asp-for="Subject" class="form-control" required>
                                <option value="" disabled selected>Seleccione un motivo</option>
                                <option value="Envio">Envío</option>
                                <option value="Producto">Producto</option>
                                <!-- Puedes agregar más opciones aquí si es necesario -->
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Mensaje</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Escribe tu mensaje"
                                required pattern=".{1,}" title="Por favor ingresa tu mensaje."></textarea>
                        </div>

                        <div class="text-center mb-3">
                            <button type="submit" class="btn btn-primary text-white text-uppercase"
                                style="background-color: #171384;">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
