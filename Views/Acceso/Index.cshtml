@{
    ViewData["Title"] = "Conectar";
}

<div class="login-container d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #ffffff; padding-top: 50px; padding-bottom: 50px;">
    <div class="login-box p-4" style="background-color: #232c3b; border-radius: 8px; max-width: 400px; width: 100%;">
        <ul class="nav nav-tabs justify-content-center mb-4" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active tab-button" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">Conectar</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link tab-button" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">Registrarte</button>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <!-- Formulario de inicio de sesión -->
            <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                <form id="loginForm" onsubmit="return validateLoginForm()">
                    <div class="mb-3">
                        <label for="email" class="form-label text-white">* Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Email" required style="border-radius: 4px;">
                        <div class="invalid-feedback">Por favor ingresa un email válido.</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label text-white">* Contraseña</label>
                        <input type="password" class="form-control" id="password" placeholder="Contraseña" required style="border-radius: 4px;" minlength="6">
                        <div class="invalid-feedback">La contraseña debe tener al menos 6 caracteres.</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" style="background-color: #1da1f2; border: none; border-radius: 4px;">ENTRAR</button>
                </form>
            </div>

            <!-- Formulario de registro -->
            <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                <form id="registerForm" onsubmit="return validateRegisterForm()">
                    <div class="mb-3">
                        <label for="register-email" class="form-label text-white">* Email</label>
                        <input type="email" class="form-control" id="register-email" placeholder="Email" required style="border-radius: 4px;">
                        <div class="invalid-feedback">Por favor ingresa un email válido.</div>
                    </div>
                    <div class="mb-3">
                        <label for="register-password" class="form-label text-white">* Contraseña</label>
                        <input type="password" class="form-control" id="register-password" placeholder="Contraseña" required style="border-radius: 4px;" minlength="6">
                        <div class="invalid-feedback">La contraseña debe tener al menos 6 caracteres.</div>
                    </div>
                    <div class="mb-3 text-white">
                        <small>Siga estos consejos:</small>
                        <ul>
                            <li>Mínimo de 6 caracteres</li>
                            <li>Use una combinación de letras, números y caracteres especiales</li>
                            <li>Evite secuencias como "12345" o "abc"</li>
                        </ul>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" style="background-color: #1da1f2; border: none; border-radius: 4px;">REGISTRARSE</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts para validación -->
<script>
    // Validación de formulario de inicio de sesión
    function validateLoginForm() {
        var email = document.getElementById("email");
        var password = document.getElementById("password");

        if (!email.checkValidity()) {
            email.classList.add("is-invalid");
            return false;
        } else {
            email.classList.remove("is-invalid");
        }

        if (!password.checkValidity()) {
            password.classList.add("is-invalid");
            return false;
        } else {
            password.classList.remove("is-invalid");
        }

        return true;
    }

    // Validación de formulario de registro
    function validateRegisterForm() {
        var email = document.getElementById("register-email");
        var password = document.getElementById("register-password");

        if (!email.checkValidity()) {
            email.classList.add("is-invalid");
            return false;
        } else {
            email.classList.remove("is-invalid");
        }

        if (!password.checkValidity()) {
            password.classList.add("is-invalid");
            return false;
        } else {
            password.classList.remove("is-invalid");
        }

        return true;
    }
</script>
