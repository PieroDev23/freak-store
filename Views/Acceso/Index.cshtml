@model freak_store.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - freak_store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/freak_store.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #1D284C;
            /* Color de fondo */
        }

        .login-container {
            width: 548px;
            max-width: 90%;
            /* Ancho máximo del cuadro */
            /* Centra el cuadro en la pantalla */
            padding: 20px;
            /* Espaciado interno */
            background-color: white;
            /* Color de fondo del cuadro */
            border-radius: 8px;
            /* Bordes redondeados */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* Sombra suave */
        }

        .form-group {
            margin-bottom: 15px;
            /* Espaciado entre grupos de formulario */
        }

        .form-control {
            background-color: #f2f2f2;
            /* Color de fondo de los campos */
            border: 1px solid #ccc;
            /* Borde del campo */
            border-radius: 4px;
            /* Bordes redondeados */
        }

        .btn-primary {
            background-color: #007bff;
            /* Color de fondo del botón */
            border-color: #007bff;
            /* Color del borde del botón */
            border-radius: 4px;
            /* Bordes redondeados del botón */
        }

        .btn-primary:hover {
            background-color: #0056b3;
            /* Color de fondo del botón al pasar el mouse */
            border-color: #0056b3;
            /* Color del borde del botón al pasar el mouse */
        }
    </style>
</head>

<body style="height: 100dvh; display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <img src="https://i.imgur.com/a6arYkc.png" alt="">
    <div class="login-container mt-5">

        <h2 class="text-center">Iniciar Sesión</h2>
        <form asp-controller="Acceso" asp-action="InicioSesion" method="post"
            class="d-flex flex-column gap-3 px-5 pb-5 pt-3">
            <div class="form-group ">
                <input asp-for="Username" class="form-control" placeholder="Usuario" required
                    style="background-color: #D9D9D9 !important;" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña"
                    style="background-color: #D9D9D9 !important;" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-primary btn-block"
                style="background-color: #171384; border: unset;">Comenzar</button>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
